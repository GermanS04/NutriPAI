generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  name     String
  lastName String
  username String
  email    String
}

// add foreign key of user
model Meals {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  description String
  proteins    Int
  carbs       Int
  fats        Int
  calories    Int
  date        DateTime @default(now())
}

// add foreign key to user
model Water {
  id       Int      @id @default(autoincrement())
  quantity Int
  date     DateTime @default(now())
}
